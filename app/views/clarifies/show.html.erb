<% content_for :title, @clarify.title %>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @clarify.created_at.strftime('%m %B, %Y') %></p>
		<h1><%= @clarify.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @clarify.content %>
	</div>

		<div id="admin_links">
		<% if user_signed_in? %>
			<%= link_to "Edit Article", edit_clarify_path(@clarify) %>
			<%= link_to "Delete Article", clarify_path(@clarify), method: :delete, data: { confirm: "Are you sure?"} %>
		<% end %>
		<%= link_to 'Back', clarifies_path %>
		</div>
	
	<hr>

	<div id="share_box">
		<p>Share <%= @clarify.title %></p>
		<a href=""><i class="fa fa-twitter"></i></a>
		<a href=""><i class="fa fa-facebook"></i></a>
		<a href=""><i class="fa fa-vk"></i></a>
	</div>

	<hr>

	<%= render 'disqus' %>


</div>