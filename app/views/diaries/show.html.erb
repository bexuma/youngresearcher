<% content_for :title, @diary.title %>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @diary.created_at.strftime('%A, %B %d') %></p>
		<h1><%= @diary.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @diary.content %>
	</div>

	
		<div id="admin_links">
		<%= link_to 'Back', diaries_path %>
		<% if user_signed_in? %>
			<%= link_to "Edit Article", edit_diary_path(@diary) %>
			<%= link_to "Delete Article", diary_path(@diary), method: :delete, data: { confirm: "Are you sure?"} %>
		<% end %>	
		</div>
	

	<hr> 
	

	<div id="share_box">
		<p>Share <%= @diary.title %></p>
		<a onclick="window.open('http://twitter.com/share?text=<%= @diary.title %> on @youngresearch_. Follow the link to Explore: &amp;<%= url_for(@diary) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
		<a onclick="window.open('http://facebook.com/sharer.php?u=<%= url_for(@diary) %>', '_blank', 'width=800, height=500, top=200, left=300'); void(0);"><i class="fa fa-facebook"></i></a>
		<a href="http://vk.com/share.php?url=<%= url_for(@diary) %>" target="_blank"><i class="fa fa-vk"></i></a>
	</div>

	<hr>

	<%= render 'disqus' %>


</div>