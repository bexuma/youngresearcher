<p id="notice"><%= notice %></p>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @explore.created_at.strftime('%m %B, %Y') %></p>
		<h1><%= @explore.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= @explore.content %>
	</div>

	
		<div id="admin_links">
			<%= link_to 'Back', explores_path %>
			<%= link_to 'Edit', edit_explore_path(@explore) %>
			<%= link_to "Delete Article", explore_path(@explore), method: :delete, data: { confirm: "Are you sure?"} %>
		</div>
	

	<hr>

	<div id="share_box">
		<p>Share <%= @explore.title %></p>
		<a href=""><i class="fa fa-twitter"></i></a>
		<a href=""><i class="fa fa-facebook"></i></a>
		<a href=""><i class="fa fa-vk"></i></a>
	</div>

	<hr>


</div>