<% content_for :title, @question.title %>

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @question.created_at.strftime('%m %B, %Y') %></p>
		<h1><%= @question.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @question.content %>
	</div>

	
		<div id="admin_links">
		<% if user_signed_in? %>
			<%= link_to "Edit Article", edit_question_path(@question) %>
			<%= link_to "Delete Article", question_path(@question), method: :delete, data: { confirm: "Are you sure?"} %>
		<% end %>
		<%= link_to 'Back', questions_path %>
		</div>
	

	<hr>

	<div id="share_box">
		<p>Share <%= @question.title %></p>
		<a href=""><i class="fa fa-twitter"></i></a>
		<a href=""><i class="fa fa-facebook"></i></a>
		<a href=""><i class="fa fa-vk"></i></a>
	</div>

	<hr>

	<%= render 'disqus' %>

</div>